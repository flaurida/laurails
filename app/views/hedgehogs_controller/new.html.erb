<form action="/hedgehogs" method="post">
  <input  type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>" />

  <label for="name">Name:</label>
  <input id="name" type="text" name="hedgehog[name]" />
  <br />

  <label for="color">Color:</label>
  <input id="color" type="text" name="hedgehog[color]" />
  <br />

  <label for="id">Owner ID:</label>
  <input id="id" type="text" name="hedgehog[owner_id]" />
  <br />

  <input type="submit" value="Create Hedgehog!" />
</form>
